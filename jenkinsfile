pipeline{
    agent any

    stages{
        stage('Build'){
            steps{
                echo "Building the code using Maven"
            }
        }
        stage('Unit and Integration Tests'){
            steps{
                echo "Running unit and integration tests using JUnit and Selenium..."
            }
            post {
                success {
                        mail to: 'matthew.sutrinso03@gmail.com',
                        subject: "Stage Success: Integration Tests",
                        body: "Stage completed successfully. Logs are attached.",
                        attachLog: true
                }
                failure {
                        mail to: 'matthew.sutrinso03@gmail.com',
                        subject: "Stage Failed",
                        body: "Stage failed. Logs are attached.",
                        attachLog: true
                }
            }
        }
        stage('Code Analysis'){
            steps{
                echo "Analyzing code using SonarQube..."
                
            }
        }
        stage('Security Scan'){
            steps{
                echo "Performing security scan using OWASP ZAP" 
            }
            post {
                success {
                        mail to: 'matthew.sutrinso03@gmail.com',
                        subject: "Stage Success: Security Scan",
                        body: "Stage completed successfully. Logs are attached.",
                        attachLog: true
                }
                failure {
                        mail to: 'matthew.sutrinso03@gmail.com',
                        subject: "Stage Failed",
                        body: "Stage failed. Logs are attached.",
                        attachLog: true
                }
            }
        }
        stage('Deploying to Staging'){
            steps{
                echo "Deploying to staging server"
                
            }
        }
        stage('Deploy to Production'){
            steps{
                echo "Deploying to production server"
                
            }
        }
    }
}
